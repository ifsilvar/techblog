  <div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/new" class="btn btn-success">New Article</a>
    {{#if loggedIn}}
    <button id="logout" class="btn btn-success">Logout</button>
    {{else}}
    <!-- Otherwise, show a link to login -->
    <a href="/login">Login</a>
    {{/if}}

    {{#each blogs as |blog|}}
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title">{{blog.title}}</h4>
          <div class="card-subtitle text-muted mb-2">
            {{blog.createdAt}}
          </div>
          <div class="card-text mb-2">{{blog.description}}</div>
          <a href="/show" class="btn btn-primary">Read More</a>
        </div>
      </div>
    {{/each}}
  </div>

<script src="./js/logout.js"></script>